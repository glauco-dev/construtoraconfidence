<section id="sessao-nossosValores">
    <h3 id="sectionTitle" class="ui header center container">Nossos Valores</h3>
    <div class="container">
        <div class="ui container grid stackable wrapper">
            <div class="ui two grid container row">

                <div class="topico_content ui" style="">
                    <img class="ui display_img" src={{this.atual_content.display_img}} alt="">
                    <div class="text_wrapper">
                        <h3>{{this.atual_content.titulo}}</h3>
                        <p>{{this.atual_content.texto}}</p>
                    </div>
                </div>
            </div>
            <div class="ui row centered controls" style="gap:20px">
                {{#each @valoresContent as |valorContent index|}}
                <img {{on "click" (fn this.changeContentIndex index)}} src="{{valorContent.icon}}" alt=""
                    class="ui tiny image">
                {{/each}}
            </div>
        </div>
    </div>
</section>

<style>
    #sessao-nossosValores {
        padding-top: 1.5rem;
        width: 100vw;
        height: min-content;
        background-color: #ffffff;
    }

    #sessao-nossosValores>.container {
        margin-top: 2rem;
    }

    #sessao-nossosValores>.container>.wrapper {
        gap: 20px
    }

    #sessao-nossosValores .controls img {
        cursor: pointer;
        transition: all 0.2s ease;
        filter: brightness(85%);
    }

    #sessao-nossosValores .controls img:hover {
        filter: brightness(100%);
        transform: scale(1.02);
    }

    #sessao-nossosValores #sectionTitle {
        color: #1b5478;
        text-shadow: none;
        padding-top: 0rem;
    }

    #sessao-nossosValores .topico_content {
        display: flex;
        flex-wrap: wrap;
        margin-right: auto;
        height: 60vh;
        gap: 2rem;
        margin-bottom: 1rem;
    }

    #sessao-nossosValores .topico_content h3 {
        font-size: 3rem;
        color: #105584;
    }

    #sessao-nossosValores .topico_content img {
        height: 100%;
        width: 50%;
        object-fit: cover;
        padding-right: 1vw;
        padding-bottom: 1.5vw;
    }

    #sessao-nossosValores .topico_content .text_wrapper {
        width: 45%;
    }

    #sessao-nossosValores .topico_content p {
        font-size: 1.5rem;
        order: 3;
    }

    @media (max-width: 590px) {
        #sessao-nossosValores #sectionTitle {
            position: absolute;
            margin-top: 0vh;
        }

        #sessao-nossosValores .topico_content {
            margin-top: 4rem;
            display: flex;
            flex-wrap: wrap;
            height: min-content;
            max-height: 80vh;
        }

        #sessao-nossosValores .topico_content .text_wrapper {
            width: 100%;
        }


        #sessao-nossosValores .topico_content h3 {
            font-size: 2rem;
        }

        #sessao-nossosValores .topico_content p {
            font-size: 1rem;
        }

        #sessao-nossosValores .topico_content img {
            max-height: 40vh;
            width: 100%;
            margin-top: 1rem;
            margin-bottom: 1rem;
            object-fit: cover;
        }
    }
</style>